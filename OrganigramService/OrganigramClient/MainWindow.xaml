<Window x:Class="OrganigramClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganigramClient"
        xmlns:load="clr-namespace:OrganigramClient.View"
             xmlns:startUp="clr-namespace:OrganigramClient.StartUp"
             startUp:ViewModelLocator.AutoWireViewModel="False"
        mc:Ignorable="d"
        Title="Client" Height="550" Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="650"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <load:TcpIpView Grid.Column="1" Grid.Row="1"/>
        <load:OrganigramView Grid.Column="1" Grid.Row="2"/>
        <load:LoggingView Grid.Column="1"  Grid.Row="3"/>
    </Grid>
</Window>
